<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @image.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @image.title %></td>
              </tr>
            </tbody>
          </table>
          
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1><%= @image.title %></h1>    
      </div>
    </div>
  </div>
</div>
